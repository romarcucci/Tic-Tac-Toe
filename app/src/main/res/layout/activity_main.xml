<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.utilisateur.apptest.MainActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIC-TAC-TOE"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:paddingRight="15dip"
        android:paddingLeft="15dip"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CURRENT PLAYER IS X"
        android:id="@+id/currentTV"
        android:textSize="20dip"
        android:textColor="@color/black"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dip" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:background="@color/black"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_column="0"
                android:background="@color/white"
                android:textSize="40dip"
                android:minWidth="80dip"
                android:minHeight="80dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button2"
                android:layout_column="1"
                android:background="@color/white"
                android:layout_marginLeft="2dip"
                android:textSize="40dip"
                android:minWidth="80dip"
                android:minHeight="80dip" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button3"
                android:layout_column="2"
                android:background="@color/white"
                android:layout_marginLeft="2dip"
                android:textSize="40dip"
                android:minWidth="80dip"
                android:minHeight="80dip" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_column="0"
                android:background="@color/white"
                android:layout_marginTop="2dip"
                android:textSize="40dip"
                android:minHeight="80dip"
                android:minWidth="80dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button5"
                android:layout_column="1"
                android:background="@color/white"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="2dip"
                android:textSize="40dip"
                android:minWidth="80dip"
                android:minHeight="80dip" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button6"
                android:layout_column="2"
                android:background="@color/white"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="2dip"
                android:textSize="40dip"
                android:minHeight="80dip"
                android:minWidth="80dip" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_column="0"
                android:background="@color/white"
                android:layout_marginTop="2dip"
                android:textSize="40dip"
                android:minWidth="80dip"
                android:minHeight="80dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button8"
                android:layout_column="1"
                android:background="@color/white"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="2dip"
                android:textSize="40dip"
                android:minHeight="80dip"
                android:minWidth="80dip" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button9"
                android:layout_column="2"
                android:background="@color/white"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="2dip"
                android:textSize="40dip"
                android:minWidth="80dip"
                android:minHeight="80dip" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView3" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Turn"
        android:id="@+id/buttonResetTurn"
        android:background="@color/lightGray"
        android:textColor="@color/black"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_alignTop="@+id/buttonResetGame"
        android:layout_alignStart="@+id/tableLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Game"
        android:id="@+id/buttonResetGame"
        android:background="@color/lightGray"
        android:textColor="@color/black"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/tableLayout" />

</RelativeLayout>
